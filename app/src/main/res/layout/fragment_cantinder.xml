<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".fragment.cantinder.CantinderFragment">


    <Button
        android:id="@+id/detailRestaurant"
        android:layout_width="00dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:visibility="invisible"
        android:text="@string/Cantinder_DetailRestaurant"
        android:textSize="0sp"
        />

    <!-- Partie prÃ©sentation restaurant -->
    <LinearLayout
        android:background="@drawable/cantinder_board_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/restaurantTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CantinderTest_Title"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20sp"/>

        <LinearLayout style="@style/InformationTextViewLayout">

            <TextView
                android:id="@+id/restaurantTempsAttente"
                style="@style/InformationTextView"
                android:text="@string/CantinderTest_TempsAttente" />

            <TextView
                android:id="@+id/restaurantPrice"
                style="@style/InformationTextView"
                android:text="@string/CantinderTest_Price" />
        </LinearLayout>

        <LinearLayout style="@style/InformationTextViewLayout">

            <TextView
                android:id="@+id/restaurantDistance"
                style="@style/InformationTextView"
                android:text="@string/CantinderTest_Distance"
                 />

            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/restaurantGrade"
                android:textStyle="italic"
                android:isIndicator="true"

                />
        </LinearLayout>
    </LinearLayout>

    <!-- Partie boutons decline/accept -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:background = "@drawable/roundedbutton"
            android:id="@+id/reject"
            style="@style/ActionButton"
            android:src="@drawable/dislike"
            />

        <ImageButton
            android:background = "@drawable/roundedbutton"
            android:id="@+id/accept"
            style="@style/ActionButton"
            android:src="@drawable/like" />
    </LinearLayout>
</LinearLayout>
