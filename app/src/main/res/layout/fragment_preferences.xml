<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragment.preferences.PreferencesFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="@dimen/pref_card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: "
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />

            <TextView
                android:id="@+id/distanceChoisie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/distance_restaurant"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pref_card_margin">

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/prefDistanceRestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_indicatorColor="@color/colorPrimaryDark"
                    app:dsb_max="2000"
                    app:dsb_min="50"
                    app:dsb_progressColor="@color/colorPrimary"
                    app:dsb_trackColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_description_distance"
                    android:textAppearance="@style/PreferencesDecriptionTextStyle"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temps d'attente: "
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />

            <TextView
                android:id="@+id/tempsChoisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/temps_attente_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/pref_card_margin">

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar

                    android:id="@+id/prefTempsAttente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_indicatorColor="@color/colorPrimaryDark"
                    app:dsb_max="35"
                    app:dsb_min="5"
                    app:dsb_progressColor="@color/colorPrimary"
                    app:dsb_trackColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_description_temps"
                    android:textAppearance="@style/PreferencesDecriptionTextStyle"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix maximal: "
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />

            <TextView
                android:id="@+id/prixChoisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/prix_restaurant"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/pref_card_margin">

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/prefPrixRestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_indicatorColor="@color/colorPrimaryDark"
                    app:dsb_max="25"
                    app:dsb_min="3"
                    app:dsb_progressColor="@color/colorPrimary"
                    app:dsb_trackColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_description_prix"
                    android:textAppearance="@style/PreferencesDecriptionTextStyle"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/pref_card_margin">

                <RatingBar
                    android:id="@+id/prefNote"
                    style="@style/CustomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:max="5"
                    android:numStars="5"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:stepSize="0.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_description_note"
                    android:textAppearance="@style/PreferencesDecriptionTextStyle"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:text="Type de\nrestaurant"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>




            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/checkboxLayout"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regime"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pref_card_margin">

                <Spinner
                    android:id="@+id/regime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_description_regime"
                    android:textAppearance="@style/PreferencesDecriptionTextStyle"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/connecte_en_tant_que"
            android:textAppearance="@style/PreferencesDecriptionTextStyle"
            android:text="@string/connecte_en_tant_que"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
</ScrollView>